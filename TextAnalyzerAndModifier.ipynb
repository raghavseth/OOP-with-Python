    "def top_frequency(text,k):\n",
    "    # YOUR CODE HERE\n",
    "    split_d = text.split()\n",
    "    d = {}\n",
    "    for i in split_d:\n",
    "        d[i]=split_d.count(i)\n",
    "    lst = [(d[w],w) for w in d]\n",
    "    lst.sort()\n",
    "    lst.reverse()\n",
    "    i = 1\n",
    "    l = []\n",
    "    for count, word in lst[:k]:\n",
    "        print('%s. %4s %s' %(i,count,word))\n",
    "        i+= 1\n",
    "        l.append(word)\n",
    "    return l"
