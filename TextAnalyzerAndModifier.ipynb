    "def text_cleanup(text):\n",
    "    # YOUR CODE HERE\n",
    "    out = \"\"\n",
    "    valid_punctuations = ['.',',',':',';','\"','?','!','(',')','[',']']\n",
    "    for c in text:\n",
    "        if c.isalnum() or c in valid_punctuations:\n",
    "            out = out+c\n",
    "    return(out)"
